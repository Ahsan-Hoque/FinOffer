<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.ahsanulhoque.finoffer.authentication.Login">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/FinLogoIMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="69dp"
            app:srcCompat="@drawable/applogo" />

        <TextView
            android:id="@+id/TitleLogoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FinLogoIMG"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Fin Offer"
            android:textAlignment="center"
            android:textColor="#7f7f7f"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/EmailET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TitleLogoTV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:ems="15"
            android:hint="Email"
            android:textCursorDrawable="@null"
            android:backgroundTint="#9E9E9E"
            android:drawableLeft="@drawable/usericon"
            android:drawablePadding="2dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/PassET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/EmailET"
            android:layout_alignStart="@+id/EmailET"
            android:layout_below="@+id/EmailET"
            android:layout_marginTop="21dp"
            android:ems="15"
            android:textCursorDrawable="@null"
            android:hint="Password"
            android:backgroundTint="#80CBC4"
            android:drawableLeft="@drawable/lockicon"
            android:drawablePadding="2dp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/LogBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/PassET"
            android:layout_alignLeft="@+id/PassET"
            android:layout_alignRight="@+id/PassET"
            android:layout_alignStart="@+id/PassET"
            android:layout_below="@+id/PassET"
            android:layout_marginTop="26dp"
            android:background="@drawable/buttonstyle"
            android:text="Login"
            android:ems="15"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/ForgotPassTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/LogBTN"
            android:layout_alignStart="@+id/LogBTN"
            android:layout_below="@+id/LogBTN"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:text="@string/forgotPassword"
            android:textAlignment="center"
            android:backgroundTint="#9E9E9E"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/SignUPTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ForgotPassTV"
            android:layout_alignEnd="@+id/LogBTN"
            android:layout_alignRight="@+id/LogBTN"
            android:textSize="18sp"
            android:textAlignment="center"
            android:backgroundTint="#9E9E9E"
            android:text="@string/SignUP" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
