<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryBack">

    <include
        android:id="@+id/include"
        layout="@layout/custom_tool_bar"></include>

    <ProgressBar
        android:id="@+id/itemListProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/itemlist"
        android:layout_alignLeft="@+id/itemlist"
        android:layout_alignRight="@+id/itemlist"
        android:layout_alignStart="@+id/itemlist"
        android:layout_below="@+id/my_toolbar"
        android:layout_marginTop="10dp"
        android:ems="15"
        android:theme="@style/AppTheme.AccentActionBar"
        app:layout_constraintBottom_toBottomOf="@+id/my_toolbar"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/itemlist"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/itemListProgressBar"
        tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
        />

    <RelativeLayout
        android:id="@+id/midLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/itemlist">
        <TextView
            android:id="@+id/middleline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOPS"
            android:textAllCaps="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/middleline"
            android:layout_alignStart="@+id/middleline"
            android:background="@drawable/strike_through"
            android:gravity="start"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/brandListProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/midLine"
        android:layout_alignStart="@+id/brandList"
        android:layout_alignLeft="@+id/brandList"
        android:layout_alignRight="@+id/brandList"
        android:layout_alignEnd="@+id/brandList"
        android:layout_marginTop="10dp"
        android:ems="15"
        app:layout_constraintTop_toBottomOf="@+id/midLine"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/brandList"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/brandListProgressBar"
        tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:layout_marginTop="15dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryWhite"
        app:layout_constraintTop_toBottomOf="@+id/brandList">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/firstIMGV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/menu_all" />

            <ImageView
                android:id="@+id/secndIMGV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/firstIMGV"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/firstIMGV"
                android:layout_toRightOf="@+id/firstIMGV"
                android:src="@drawable/menu_food" />

            <ImageView
                android:id="@+id/thrdIMGV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/secndIMGV"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/frthIMGV"
                android:layout_toStartOf="@+id/frthIMGV"
                android:src="@drawable/menu_clothing" />

            <ImageView
                android:id="@+id/frthIMGV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/thrdIMGV"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/menu_electronics" />


        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
