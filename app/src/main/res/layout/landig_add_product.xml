<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/custom_tool_bar"></include>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Product Name"
            android:inputType="textPersonName"
            android:layout_marginTop="90dp"
            android:text="" />

        <EditText
            android:id="@+id/productDescription"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/productName"
            android:hint="Product Description"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/regularPrice"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/productDescription"
            android:hint="Regular Price"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/discountIn"
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:layout_below="@+id/regularPrice"
            android:hint="Discount in %"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/price"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_below="@+id/regularPrice"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/discountIn"
            android:layout_toRightOf="@+id/discountIn"
            android:hint="price"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/price"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Location"
            android:inputType="textPersonName"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/location"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            app:srcCompat="@android:drawable/ic_menu_report_image" />

        <Button
            android:id="@+id/addImage"
            android:layout_width="120dp"
            android:layout_height="56dp"
            android:layout_alignEnd="@+id/price"
            android:layout_alignRight="@+id/price"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginTop="35dp"
            android:textColor="@color/colorPrimaryWhite"
            android:textAllCaps="false"
            android:background="@drawable/buttonstyle"
            android:text="Add Image" />

        <Button
            android:id="@+id/addProduct"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonstyle"
            android:text="Publish Product"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryWhite" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>