<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ahsanulhoque.finoffer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.authentication.LogInActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.authentication.SignUpActivity"
            android:label="signUp"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.core.MainFinOfferActivity"
            android:label="landingPage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.core.AddProductActivity"
            android:label="addProduct"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.core.ProductDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.core.FaqActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activity.core.AboutActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>